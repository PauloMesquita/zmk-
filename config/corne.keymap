/ {
        keymap {
                compatible = "zmk,keymap";

                mac_base_layer {
                        bindings = <
// |----------------------------------------------------------------       ------------------------------------------------------------|
// |    ESC   |    Q    |    W    |    E     |    R     |    T     |       |   Y   |     U     |    I    |    O    |    P   |   ` ~    |
      &kp ESC    &kp Q     &kp W     &kp E      &kp R       &kp T            &kp Y     &kp U       &kp I    &kp O     &kp P   &kp GRAVE
// |----------------------------------------------------------------       ------------------------------------------------------------|
// |   SHFT   |    A    |    S    |     D    |     F    |    G     |       |   H   |      J    |     K   |    L    |   ; :  |   ' "    |
     &kp LSHFT    &kp A     &kp S     &kp D      &kp F      &kp G             &kp H     &kp J      &kp K     &kp L  &kp SEMI  &kp SQT
// |----------------------------------------------------------------       ------------------------------------------------------------|
// |   CTRL   |    Z    |    X    |     C    |    V     |    B     |       |   N   |     M     |   , <   |   . >   |   / ?  |   \ |    |
     &kp LCTRL   &kp Z     &kp X     &kp C      &kp V      &kp B             &kp N     &kp M    &kp COMMA  &kp DOT  &kp FSLH  &kp BSLH
// |----------------------------------------------------------------       ------------------------------------------------------------|
//                                |  ALT OPT |  GUI CMD |   N_LY   |       |  ENTR | BACKSPACE |   SPC   |
                                    &kp LALT   &kp LGUI    &mo 1            &kp RET   &kp BSPC  &kp SPACE
//                                |---------------------------------       ------------------------------|
                        >;
                };


                number_and_symbols_layer {
                        bindings = <
// |-----------------------------------------------------------------       --------------------------------------------------------------|
// |    TAB   |     <    |     v    |    ^    |     >     | PRTSCRN |       |    .    |    7 &    |   8 *   |   9 (   |    -    |    =    |
     &kp TAB    &kp LEFT   &kp DOWN   &kp UP    &kp RIGHT  &kp PSCRN         &kp DOT     &kp N7     &kp N8    &kp N9   &kp MINUS &kp EQUAL
// |-----------------------------------------------------------------       --------------------------------------------------------------|
// |   SHFT   |     <    |     v    |    ^    |     >     |         |       |    ,    |    4 $    |   5 %   |   6 ^   |    [    |    ]    |
    &kp LSHFT   &kp LEFT   &kp DOWN   &kp UP    &kp RIGHT    &none           &kp COMMA   &kp N4      &kp N5   &kp N6   &kp LBKT  &kp RBKT
// |-----------------------------------------------------------------       --------------------------------------------------------------|
// |   CTRL   | BLTH_LY  | CRZY_LY  |         |           |         |       |   0 )   |   1  !    |  2  @   |   3 #   |    (    |    )    |
    &kp LCTRL    &to 2      &to 3      &none      &none      &none           &kp N0     &kp N1     &kp N2    &kp N3    &kp LPAR  &kp RPAR
// |-----------------------------------------------------------------       --------------------------------------------------------------|
//                                |  ALT OPT |  GUI CMD |           |       |   ENTR  | BACKSPACE |   SPC   |
                                    &kp LALT   &kp LGUI      &none            &kp RET   &kp BSPC   &kp SPACE
//                                |----------------------------------       --------------------------------|
                        >;

                };

                bluetooth_and_reset_layer {
                        bindings = <
// |----------------------------------------------------------------------------------------        --------------------------------------------------------------|
// |            |              |              |              |              |              |        |         |         |         |         |         |           |
       &none         &none         &none          &none         &none           &none                  &none    &none      &none     &none    &none       &none
// |----------------------------------------------------------------------------------------        --------------------------------------------------------------|
// |   BT_CLR   |      BT0     |      BT1     |      BT2     |      BT3     |      BT4     |        |         |         |         |         |         |           |
     &bt BT_CLR   &bt BT_SEL 0   &bt BT_SEL 1   &bt BT_SEL 2   &bt BT_SEL 3   &bt BT_SEL 4             &none    &none      &none     &none     &none     &none
// |----------------------------------------------------------------------------------------        --------------------------------------------------------------|
// |   BS_LY    |              |              |              |              |              |        |         |         |         |         |         |  BS_LY    |
       &to 0         &none         &none         &none            &none         &none                 &none    &none      &none     &none     &none     &to 0
// |----------------------------------------------------------------------------------------        --------------------------------------------------------------|
//                                            |      RST     |              |              |        |         |         |     RST    |
                                                 &bootloader       &none         &none                 &none      &none  &bootloader
//                                            |---------------------------------------------        ---------------------------------|

                        >;
                };







// Everything after this is pure crazyness



                crazy_test_layer_1 {
